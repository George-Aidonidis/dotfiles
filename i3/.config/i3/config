####################
# Bluetooth Headet #
####################
set $bluetooth_headset "  (0)Disconnect -   (1)Connect"
mode  $bluetooth_headset {
    bindsym 0 exec $HOME/dotfiles/scripts/disconnect-from-bose.sh; mode "default"
    bindsym 1 exec $HOME/dotfiles/scripts/connect-to-bose.sh; mode "default"
    bindcode $code_q mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+F10 mode $bluetooth_headset
###################
# Display chooser #
###################
set $displays "    (0)Laptop -     (1)Main -     (2)All"
mode  $displays {
    bindsym 0 exec $HOME/dotfiles/scripts/screens/laptop-screen.sh; mode "default"
    bindsym 1 exec $HOME/dotfiles/scripts/screens/one-screen.sh; mode "default"
    bindsym 2 exec $HOME/dotfiles/scripts/screens/two-screens-layout.sh; mode "default"
    bindcode $code_q mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+F7 mode $displays
###################
# Session manager #
###################
set $session " (E)xit - (L)ock -  (P)oweroff -  (R)eboot"
mode  $session {
    bindcode $code_e exec $psst i3-msg exit; mode "default"
    bindcode $code_l exec betterlockscreen --lock; mode "default"
    bindcode $code_p exec $psst systemctl poweroff; mode "default"
    bindcode $code_r exec $psst systemctl reboot; mode "default"

    bindcode $code_q mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+F4 mode $session
