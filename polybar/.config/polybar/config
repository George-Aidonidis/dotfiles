[colors]
foreground-workspace = ${xrdb:foreground-workspace:#000}
focused-foreground-workspace = ${xrdb:color7:#fff}
focused-background-workspace = ${xrdb:focused-background-workspace:#444}
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#fff}
primary = ${xrdb:color3:#ffb52a}
softred = ${xrdb:softred:#e60053}
alert = ${xrdb:alert:#e60053}
spotify = ${xrdb:spotify:#00D965}
green = ${xrdb:green:#00D965}
orange = ${xrdb:orange:#FF4500}
blue = ${xrdb:blue:#3581fc}

[fonts]
avant_garde = AvantGarde LT Medium:size=10;3
droid_sans_mono = DroidSansMonoForPowerline Nerd Font:style=Regular:size:10;3
font_awesome = FontAwesome:style=Regular:size=10;3
weather = Weather Icons:style=Regular:size=8;3
material = MaterialDesignIcons:size=10;1
monospace = Monospace:size=10;3
noto = Noto Color Emoji:style=Regular:scale=13:size=10;2

#################
# Laptop screen #
#################
[bar/laptop]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 20
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = ${fonts.avant_garde}
font-1 = ${fonts.noto}
font-2 = ${fonts.font_awesome}
font-3 = ${fonts.weather}
font-4 = ${fonts.material}
font-5 = ${fonts.monospace}

modules-left = i3
modules-center =
modules-right = spotify backlight pulseaudio-rofi-input pulseaudio battery battery2 date xkeyboard

cursor-click = pointer
cursor-scroll = ns-resize
################
# Main monitor #
################
[bar/main]
monitor = ${env:MONITOR:DP-1}
width = 100%
height = 20
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = ${fonts.avant_garde}
font-1 = ${fonts.noto}
font-2 = ${fonts.font_awesome}
font-3 = ${fonts.weather}
font-4 = ${fonts.material}
font-5 = ${fonts.monospace}

modules-left = i3
modules-center =
modules-right = spotify openweathermap-simple-icon openweathermap-simple-text filesystem pulseaudio-rofi-input pulseaudio cpu temperature memory wired-network wireless-network archupdates battery battery2 date xkeyboard

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize
####################
# Fallback monitor #
####################
[bar/fallback]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 20
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = ${fonts.avant_garde}
font-1 = ${fonts.noto}
font-2 = ${fonts.font_awesome}
font-3 = ${fonts.weather}
font-4 = ${fonts.material}
font-5 = ${fonts.monospace}

modules-left = i3
modules-center =
modules-right = spotify openweathermap-simple-icon openweathermap-simple-text filesystem backlight pulseaudio-rofi-input pulseaudio cpu temperature memory wired-network wireless-network archupdates battery battery2 date xkeyboard

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix-foreground = ${colors.foreground}
format-prefix-underline = ${colors.softred}

label-layout-font = 6
label-layout =  %layout%
label-layout-underline = ${colors.softred}

label-indicator-background = ${colors.softred}
label-indicator-underline = ${colors.softred}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =  %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.foreground-workspace}
label-mode-background = ${colors.primary}
; focused = Active workspace on focused monitor
label-focused = %index% %icon%
label-focused-foreground = ${colors.focused-foreground-workspace}
label-focused-background = ${colors.focused-background-workspace}
label-focused-padding = 2


; unfocused = Inactive workspace on any monitor
label-unfocused = %index% %icon%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index% %icon%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index% %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8; 
ws-icon-8 = 9;
ws-icon-9 = 10;

[module/xbacklight]
type = internal/xbacklight

output = eDP-1

label = %percentage%%
format = <label>

[module/cpu]
label-font = 6
type = internal/cpu
interval = 2
format ="  <label>"
label =%percentage:2%%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format-padding = 0
format-margin = 0
format-spacing = 0
format-offset = 0
format =  <label>
format-warn =  <label-warn>

format-font = 6
format-warn-font = 6
label = %temperature:6%
label-warn = %temperature:6%
label-warn-foreground = ${colors.softred}
format-warn-foreground = ${colors.softred}

[module/memory]
type = internal/memory
interval = 2
format = " <label>"
format-prefix-foreground = ${colors.foreground}
label = %percentage_used%%
label-font = 6

[module/wlan]
type = internal/network
;Use `ls /sys/class/net` to find out the name of the interface
interface = wlp58s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %{T5}%{T-}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground}

ramp-signal-0 = 1
ramp-signal-1 = 2
ramp-signal-2 = 3
ramp-signal-3 = 4
ramp-signal-4 = 5

label-font = 5
[module/eth]
type = internal/network
;Use `ls /sys/class/net` to find out the name of the interface
interface = enp0s31f6
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
label-connected = %local_ip%

format-disconnected =

[module/wired-network]
type = internal/network
interface = enp0s31f6
interval = 1
label-connected-font = 6

label-connected =  %upspeed:8%  %downspeed:8%

[module/wireless-network]
type = internal/network
interface = wlp58s0
label-connected =  %upspeed:8%  %downspeed:8%
interval = 1
accumulate-stats = true
label-connected-font = 6

[module/date]
type = internal/date
interval = 1
date = " %a %d %b"
time = %H:%M:%S
format-foreground = ${colors.foreground}

label = %{A1:gsimplecal:}  %date%  %time% %{A}
click-left = gsimplecal

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage:3:6%%
label-volume-foreground = ${colors.foreground}
format-prefix-underline = ${colors.softred}
format-volume-underline = ${colors.softred}
label-muted-underline = ${colors.softred}
label-muted-font = 6
label-muted = "  "
label-font = 3
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 97

; To show animation replace <ramp-capacity> with <animation-charging>
format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage:3\%%
label-discharging = %percentage:3\%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

ramp-capacity-0-foreground = ${colors.orange}

format-full-foreground = ${colors.green}

animation-charging-framerate = 750

[module/battery2]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 97

; To show animation replace <ramp-capacity> with <animation-charging>
format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage:3\%%
label-discharging = %percentage:3\%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

ramp-capacity-0-foreground = ${colors.orange}

format-full-foreground = ${colors.green}

animation-charging-framerate = 750

[module/backlight]
type = internal/backlight
format =  <label>
card = intel_backlight
enable-scroll = true

; XRandR output to get get values from
; Default: the monitor defined for the running bar

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[module/spotify]
type = custom/script
format-prefix = " "
format-padding = 1
format-foreground = ${colors.spotify}
interval = 3
exec = python $HOME/dotfiles/scripts/polybar/spotify
exec-if = pgrep -x spotify
tail = true
label-maxlen = 35
click-right = i3-msg workspace "10"
click-left = playerctl play-pause

[module/openweathermap-simple-icon]
type = custom/script
exec = $HOME/dotfiles/scripts/polybar/openweathermap-simple-icon
interval = 600
label-font = 4
format-padding = 0
format-margin = 0
format-spacing = 0
format-offset = 0

[module/openweathermap-simple-text]
type = custom/script
exec = $HOME/dotfiles/scripts/polybar/openweathermap-simple-text
interval = 600
label-font = 1
format-offset = -8

[module/archupdates]
type = custom/script
interval = 1800
format-foreground = ${colors.blue}
format-font = 7
format = 📦 <label>
exec = $HOME/dotfiles/scripts/polybar/archupdates

[module/pulseaudio-rofi-input]
format-prefix-underline = ${colors.softred}
format-underline = ${colors.softred}
label-font = 6
label = %output:3:8%
type = custom/script
exec = $HOME/dotfiles/scripts/polybar/pulse-input --input_volume_listener
tail = true
click-right = $HOME/dotfiles/scripts/polybar/pulse-input --input
click-left = $HOME/dotfiles/scripts/polybar/pulse-input --mute_source
scroll-up = $HOME/dotfiles/scripts/polybar/pulse-input --volume_source_up
scroll-down = $HOME/dotfiles/scripts/polybar/pulse-input --volume_source_down
