#!/usr/bin/bash
path=(~/Pictures/Wallpapers)

WALLPAPER=$(find $path | shuf -n1)
# WALLPAPER2=$(printf "%s\n" "${files[RANDOM % ${#files[@]}]}")

cp $WALLPAPER ~/.config/wall.png && feh --bg-scale ~/.config/wall.png
# notify-send -i "$WALLPAPER" "Wallpaper changed"

